<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.github.lleuad0.shopsandprices.fragments.list.ListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/addNewFromList"
            app:destination="@id/newProductNavigation" />
        <action
            android:id="@+id/showInfoFromList"
            app:destination="@id/productInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/productInfoFragment"
        android:name="com.github.lleuad0.shopsandprices.fragments.product_info.ProductInfoFragment"
        android:label="ProductInfoFragment"
        tools:layout="@layout/fragment_product_info">
        <argument
            android:name="productId"
            app:argType="long" />
        <action
            android:id="@+id/editProduct"
            app:destination="@id/editProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProductFragment"
        android:name="com.github.lleuad0.shopsandprices.fragments.edit_product.EditProductFragment"
        android:label="EditProductFragment"
        tools:layout="@layout/fragment_product_edit">
        <argument
            android:name="productId"
            app:argType="long" />
    </fragment>

    <navigation
        android:id="@+id/newProductNavigation"
        app:startDestination="@id/newProductFragment">
        <fragment
            android:id="@+id/newProductFragment"
            android:name="com.github.lleuad0.shopsandprices.fragments.new_product.NewProductFragment"
            android:label="NewProductFragment"
            tools:layout="@layout/fragment_new_product">
            <action
                android:id="@+id/addShop"
                app:destination="@id/newShopFragment" />
        </fragment>
        <fragment
            android:id="@+id/newShopFragment"
            android:name="com.github.lleuad0.shopsandprices.fragments.new_product.NewShopFragment"
            android:label="NewShopFragment"
            tools:layout="@layout/fragment_new_shop">
            <action
                android:id="@+id/addPrice"
                app:destination="@id/newPriceFragment" />
        </fragment>
        <fragment
            android:id="@+id/newPriceFragment"
            android:name="com.github.lleuad0.shopsandprices.fragments.new_product.NewPriceFragment"
            android:label="NewPriceFragment"
            tools:layout="@layout/fragment_new_price">
            <action
                android:id="@+id/finishAdding"
                app:destination="@+id/listFragment" />
        </fragment>
    </navigation>
</navigation>